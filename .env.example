# Network endpoints
HORIZON_URL=https://horizon.stellar.org
SOROBAN_RPC_URL=https://soroban-rpc.mainnet.stellar.org
# testnet: https://soroban-testnet.stellar.org

# Start ledger (custom block)
START_LEDGER=60000000

# Optional: restrict to contracts (comma-separated)
CONTRACT_IDS=

# Human-readable topics; each inner array is one "topic filter"
# Example: first topic = symbol "transfer", others = wildcard
TOPIC_FILTER_HUMAN=[["sym:transfer","*","*","*"]]

# GraphQL port
GRAPHQL_PORT=8080

# Prisma/Postgres
DATABASE_URL=postgresql://stellar:stellar@db:5432/stellar_indexer
